{
  "name": "@asmartbear/puppyteer",
  "version": "1.0.5",
  "description": "Job-based system for running puppeteer",
  "keywords": [],
  "scripts": {
    "type-check": "tsc --noEmit",
    "test": "jest --runInBand",
    "watch": "npm test -- --watchAll --coverage",
    "coverage": "npm test -- --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "try": "tsc && node dist/try.js",
    "minify": "uglifyjs --compress --mangle --output dist/index.min.js -- dist/index.js",
    "postbuild": "npm run minify",
    "prerelease": "npm test && npm run build",
    "prepare": "npm test && npm run build",
    "release": "standard-version",
    "postpublish": "git push origin main --follow-tags"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/mocha": "7.0.2",
    "@types/node": "13.11.1",
    "@types/puppeteer": "5.4.7",
    "benchmark": "2.1.4",
    "jest": "^29.7.0",
    "open-cli": "6.0.1",
    "rimraf": "2.6.3",
    "standard-version": "6.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "6.2.2",
    "tslint": "6.1.1",
    "typescript": "^5.2.2",
    "uglify-js": "3.13.8"
  },
  "dependencies": {
    "@asmartbear/jobs": "1.0.17",
    "async-mutex": "0.5.0",
    "puppeteer": "23.3.1"
  },
  "license": "MIT",
  "repository": {
    "url": "git@github.com:asmartbear/puppyteer.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/asmartbear/puppyteer/issues"
  },
  "author": {
    "name": "Jason Cohen",
    "url": "https://github.com/asmartbear"
  },
  "main": "dist/index.min.js",
  "files": [
    "dist"
  ],
  "types": "dist",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "test/.*\\.(ts|tsx|js)$"
  }
}
